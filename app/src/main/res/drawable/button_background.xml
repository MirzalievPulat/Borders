<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <stroke android:width="3dp" android:color="#F60606" android:dashWidth="3dp" android:dashGap="2dp"/>
        </shape>
    </item>

    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <stroke android:width="3dp" android:color="#E89292" android:dashWidth="3dp" android:dashGap="2dp"/>
        </shape>
    </item>

</selector>